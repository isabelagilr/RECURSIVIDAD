// menorCercano.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include "stdio.h"

using namespace std;

void cargar(int v[], int n)
{
 int x; 
 for(int i=0;i<n;i++)
 {
	 cout<<"Elemento "<<i+1<<" :";
	 cin>>x;
	 v[i]=x;
 }
}

void mostrar(int v[], int n)
{
 for(int i=0;i<n;i++)
	 cout<<v[i]<<"  ";

 cout<<endl;
}

void insertarpos(int v[], int &n, int pos, int d)
{
	if(pos==n-1)
	{
		v[n]=v[n-1];
		v[n-1]=d;
		n=n+1;
	}
	else
	{
		insertarpos(v,n,pos+1,d);
		v[pos+1]=v[pos];
		v[pos]=d;
	}
}

void eliminarpos(int v[], int &n, int pos)
{
	if(pos==n-1)
		n=n-1;
	else
	{
		v[pos]=v[pos+1];
		eliminarpos(v,n,pos+1);
	}
}
void main()
{
	int v[50],n,d,pos,pos1;
	cout<<"Dimension del vector:";
	cin>>n;
	cargar(v,n);
	cout<<endl;
	cout<<"El vector cargado es:"<<endl;
	mostrar(v,n);
	cout<<endl;
	cout<<"ingrese el digito que desea aumentar al vector"<<endl;
	cin>>d;
	cout<<"ingrese en que pos esta el digito"<<endl;
	cin>>pos;
	insertarpos(v,n,pos,d);
	mostrar(v,n);
	cout<<"ingrese en que pos esta el digito que quiere eliminar"<<endl;
	cin>>pos1;
	eliminarpos(v,n,pos1);
	mostrar(v,n);

	getch();
}
